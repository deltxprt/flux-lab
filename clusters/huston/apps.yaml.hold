apiVersion: kustomize.toolkit.fluxcd.io/v1
kind: Kustomization
metadata:
  name: huston-apps
  namespace: flux-system
spec:
  interval: 3m
  path: ./apps/overlays/huston/apps
  prune: true
  sourceRef:
    kind: GitRepository
    name: flux-system
  timeout: 2m
  wait: true
  decryption:
    provider: sops
    secretRef:
      name: sops-age
